{
  "name": "web-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o assets/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace assets/css/index.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css assets/css/index.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "server": "serve --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css-lint && npm run css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diego-betto/web-app.git"
  },
  "author": "Diego Betto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/diego-betto/web-app/issues"
  },
  "homepage": "https://github.com/diego-betto/web-app#readme",
  "dependencies": {
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.7.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "purgecss": "^4.1.3",
    "serve": "^13.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-twbs-bootstrap": "^2.2.4"
  }
}
